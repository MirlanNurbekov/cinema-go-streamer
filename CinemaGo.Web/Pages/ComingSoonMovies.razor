@page "/comingsoonmovies"

<h3>ComingSoonMovies</h3>

<ul class="list-unstyled">
    @foreach (var UProduct in products)
    {
        <li class="media my-3">
            <div class="container mt-5 ">
                <form class=" row g-3 ">
                    <div class=" col-md-2">
                        <div class="media-img-wrapper mr-3">
                            <a href="/product/@UProduct.Id">
                                <img class="media-img" src="@UProduct.Image" alt="@UProduct.Title" />
                            </a>
                        </div>

                    </div>
                    <div class=" col-md-10">
                        <div class="media-body align-content-start ">
                            <b>Title </b>
                            <br>
                            @UProduct.Title
                            <br>
                            <b>Description </b>
                            <br>
                            @UProduct.Description
                            <br>
                            <b>Release Date </b>
                            <br>
                            @UProduct.ReleaseDate
                            <br>
                            <b>Language </b>
                            <br>
                            @UProduct.Language
                            <br>
                            <b>Genre </b>
                            <br>
                            @UProduct.Genre
                            <br>
                            <b>Running Time </b>
                            <br>
                            @UProduct.RunningTime
                            <br>

                        </div>
                    </div>
                </form>
            </div>
        </li>
    }
</ul>

